{% extends "layout.html.twig" %}
{% set active_page = "user" %}

{% block title %}Profile{% endblock %}

{% block content %}

    <div class="panel panel-default">
        {% if error %}
            <div class="alert alert-danger">
                <span class="glyphicon glyphicon-remove"></span><strong>
                    {% if error is iterable %}
                        {% for err in error %}
                            {{ err }}<br />
                        {% endfor %}
                    {% else %}
                        {{ error }}
                    {% endif %}
                </strong>
            </div>
        {% endif %}
        <form id="register-form" action="{{ path('user-profile') }}" method="post" role="form">
            <input type="hidden" name="action" id="action" value="update" />
            <div class="form-group">
                <input type="text" name="name" id="name" tabindex="2" class="form-control" placeholder="Name" value="{{ user.name }}">
            </div>
            <div class="form-group">
                <input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="{{ user.username }}" disabled>
            </div>
            <div class="form-group">
                <input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="{{ user.email }}" disabled>
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password" value="oldpassword100days">
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <input type="submit" name="profile-submit" id="profile-submit" tabindex="4" class="form-control btn btn-outline btn-success" value="Update">
                    </div>
                </div>
            </div>
        </form>
    </div>

{% endblock %}


{% block footerjs %}
    {{ parent() }}
{% endblock %}
